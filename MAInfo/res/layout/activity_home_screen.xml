<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label=""
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context=".HomeScreen" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ApacheTextView"
        android:layout_alignBottom="@+id/ApacheTextView"
        android:layout_alignLeft="@+id/saa_button"
        android:layout_alignRight="@+id/saa_button"
        android:gravity="center"
        android:text="@string/saa"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ApacheTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flik_button"
        android:layout_alignRight="@+id/flik_button"
        android:layout_below="@+id/saa_button"
        android:gravity="center"
        android:text="@string/flik"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/flik_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/settings_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/flik_button_custom"
        android:scaleType="fitStart"
        android:src="@drawable/flik_button_custom" />

    <ImageButton
        android:id="@+id/saa_button"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/flik_button"
        android:layout_marginRight="28dp"
        android:background="@drawable/saa_button_custom"
        android:scaleType="fitStart"
        android:src="@drawable/saa_button_custom" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:background="@color/background_transparent"
        android:src="@drawable/gear" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/settings_button"
        android:layout_marginLeft="11dp"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="30sp" />

</RelativeLayout>
